    {
      "name": "Policy Evaluation",
      "item": [
        {
          "name": "✅ ALLOWED - No Risk Flags",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Request without risk flags should be allowed",
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response structure is valid', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('allowed');",
                  "    pm.expect(jsonData).to.have.property('risk_score');",
                  "    pm.expect(jsonData).to.have.property('reason');",
                  "});",
                  "",
                  "pm.test('Request is allowed (risk_score = 0)', function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.allowed).to.equal(true);",
                  "    pm.expect(jsonData.risk_score).to.equal(0);",
                  "    pm.expect(jsonData.reason).to.equal('ok');",
                  "});",
                  "",
                  "pm.test('Response time is less than 1000ms', function () {",
                  "    pm.expect(pm.response.responseTime).to.be.below(1000);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"

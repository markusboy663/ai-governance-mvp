            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"model\": \"gpt-4\",\n    \"operation\": \"chat_completion\",\n    \"metadata\": {\n        \"temperature\": 0.7,\n        \"test\": \"rate_limit\"\n    }\n}"
            },
            "url": {
              "raw": "{{BASE_URL}}/v1/check",
              "host": [
                "{{BASE_URL}}"
              ],
              "path": [
                "v1",
                "check"
              ]
            }

    {
      "name": "Rate Limiting",
      "item": [
        {
          "name": "Rapid Fire - First 100 Requests (Should Pass)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// All requests within the window should be allowed",
                  "if (pm.response.code === 200 || pm.response.code === 429) {",
                  "    pm.test('Response status is either 200 or 429', function () {",
                  "        pm.expect([200, 429]).to.include(pm.response.code);",
                  "    });",
                  "}",
                  "",
                  "// Count how many requests we've made",
                  "var currentCount = parseInt(pm.environment.get('request_count') || '0');",
                  "pm.environment.set('request_count', (currentCount + 1).toString());",
                  "",
                  "// Log progress",
                  "if (currentCount % 25 === 0) {",
                  "    console.log('Sent ' + (currentCount + 1) + ' requests so far');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{API_KEY}}"

              "mode": "raw",
              "raw": "{\n    \"model\": \"gpt-4\",\n    \"operation\": \"chat_completion\",\n    \"metadata\": {\n        \"temperature\": 0.7,\n        \"max_tokens\": 100\n    }\n}"
